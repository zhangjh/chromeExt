{
  "name": "聚合翻译",
  "version": "1.0",
  "manifest_version": 3,
  "description": "多渠道聚合翻译",
  "icons": {
    "16": "imgs/icon_16.png",
    "128": "imgs/icon_128.png"
  },
  "background": {
    "type": "module",
    "service_worker": "bg.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_title": "聚合翻译",
    "default_icon": "imgs/icon_19.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["page.css"],
      "js": ["jquery.min.js", "common.js", "content-script.js"]
    }
  ],
  "options_page": "options.html"
}
